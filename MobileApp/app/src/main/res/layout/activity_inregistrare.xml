<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <ImageView
        android:id="@+id/ic_numecity1"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginBottom="300dp"
        android:src="@drawable/numecity"
        app:layout_constraintEnd_toEndOf="@+id/emailInregistrare"
        app:layout_constraintStart_toStartOf="@+id/emailInregistrare"
        app:layout_constraintTop_toBottomOf="@+id/imageInregistrare"/>


    <ImageView
        android:id="@+id/imageInregistrare"
        android:layout_width="228dp"
        android:layout_height="196dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/ic_numecity1"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/ic_numecity1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logocity" />

    <EditText
        android:id="@+id/emailInregistrare"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#8cdbfb"
        android:ems="10"
        android:fontFamily="@font/source_sans_pro"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/parolaInregistrare"
        app:layout_constraintStart_toStartOf="@+id/parolaInregistrare"
        app:layout_constraintTop_toBottomOf="@+id/ic_numecity1"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/parolaInregistrare"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#8cdbfb"
        android:ems="10"
        android:fontFamily="@font/source_sans_pro"
        android:hint="Parola"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/confirmaParolaInregistrare"
        app:layout_constraintStart_toStartOf="@+id/confirmaParolaInregistrare"
        app:layout_constraintTop_toBottomOf="@+id/emailInregistrare"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/confirmaParolaInregistrare"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#8cdbfb"
        android:ems="10"
        android:fontFamily="@font/source_sans_pro"
        android:hint="Confirma parola"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/buttonNext"
        app:layout_constraintStart_toStartOf="@+id/buttonNext"
        app:layout_constraintTop_toBottomOf="@+id/parolaInregistrare"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="49dp"
        android:background="#25446d"
        android:fontFamily="@font/source_sans_pro"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmaParolaInregistrare" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_keyboard_backspace_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>